<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="campaigns-link">
                <arguments>
                    <argument name="path" xsi:type="string">crowdfund/campaigns/view</argument>
                    <argument name="label" xsi:type="string">My Campaigns</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="campaigns-link-paypal">
                <arguments>
                    <argument name="path" xsi:type="string">crowdfund/paypal/index</argument>
                    <argument name="label" xsi:type="string">PayPal Account</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>